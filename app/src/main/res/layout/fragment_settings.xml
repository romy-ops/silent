<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F1E"
    android:padding="20dp">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCESS PROTOCOLS"
        android:textColor="#03DAC5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Trusted Wi-Fi SSID (Safe Zone):"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/settings_title" />

    <EditText
        android:id="@+id/et_trusted_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#03DAC5"
        android:hint="Enter Network Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#555555"
        app:layout_constraintTop_toBottomOf="@id/label_wifi" />

    <Button
        android:id="@+id/btn_save_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#03DAC5"
        android:text="UPDATE PROTOCOL"
        android:textColor="#0F0F1E"
        app:layout_constraintTop_toBottomOf="@id/et_trusted_wifi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Note: When connected to this network, the vault will skip biometric scans and decrypt automatically."
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btn_save_config" />

</androidx.constraintlayout.widget.ConstraintLayout>