<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".ui.home.HomeFragment">

    <com.example.silentguardian.MatrixBackgroundView
        android:id="@+id/matrix_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <LinearLayout
        android:id="@+id/panel_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_vault_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="[ SYSTEM_LOCKED ]"
            android:textColor="#00FF41"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/context_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="SCANNING_ENVIRONMENT..."
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FF41"
        android:fontFamily="monospace"
        android:text="VERIFY_IDENTITY"
        android:textColor="#0D0D0D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/vault_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@id/tv_debug_net"
        app:layout_constraintTop_toBottomOf="@id/panel_status">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> SECURE_DATA_INPUT"
            android:fontFamily="monospace"
            android:textColor="#00FF41" />

        <EditText
            android:id="@+id/et_secret_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#26FFFFFF"
            android:fontFamily="monospace"
            android:hint="Type secret note here..."
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF" />

        <Button
            android:id="@+id/btn_save_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="COMMIT_TO_STORAGE"
            android:backgroundTint="#00FF41"
            android:textColor="#0D0D0D"
            android:fontFamily="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="> CURRENTLY_ENCRYPTED:"
            android:fontFamily="monospace"
            android:textColor="#00FF41" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#1A00FF41"
            android:scrollbarThumbVertical="@android:color/white">

            <TextView
                android:id="@+id/tv_stored_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:fontFamily="monospace"
                android:text="[ NO DATA FOUND ]"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_debug_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:text="NET_ID: SCANNING..."
        android:textColor="#4D00FF41"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>